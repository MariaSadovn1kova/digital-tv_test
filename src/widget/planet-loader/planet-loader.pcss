.loader {
  width: 100%;
  display: flex;
  justify-content: center;
  
  .loader__spin {
    border: 4px solid transparent;
    border-top-color: transparent;
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: rotate 1s linear infinite;
  }
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}